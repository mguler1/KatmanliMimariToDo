@using YSKProje.ToDo.Web.Areas.Admin.Models
@model RaporAddViewModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";

}
<form class="w-75 mx-auto p-3" method="post" asp-action="EkleRapor">
    <div class="card">
        <div class="text-center lead p-3">
            <div class="card-body">
                <p class="card-text">
                    <span class="text-danger ">Görev Adı:</span>@Model.Gorev.Ad
                </p>
                <p class="card-text">
                    <span class="text-danger">Görev Açıklama:</span>@Model.Gorev.Aciklama
                </p>
                <p class="card-text">
                    <span class="text-danger">Aciliyet:</span>@Model.Gorev.Aciliyet.Tanim
                </p>
            </div>
        </div>
        </div>
        <input type="hidden" asp-for="GorevId" />
        <div class="form-group">
            <label asp-for="Tanim"></label>
            <span asp-validation-for="Tanim" class="text-danger"></span>
            <input asp-for="Tanim" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Detay"></label>
            <span asp-validation-for="Detay" class="text-danger"></span>
            <textarea asp-for="Detay" class="form-control"></textarea>
        </div>
    
        <div class="form-group">
            <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check"></i> Kaydet</button>
            <a asp-action="Index" class="btn btn-danger btn-sm"><i class="fas fa-chevron-down"></i> Geri Dön</a>
        </div>
    
</form>
@section JavaScript{

    <script src="~/lib/jqueryValidate/jquery.validate.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}