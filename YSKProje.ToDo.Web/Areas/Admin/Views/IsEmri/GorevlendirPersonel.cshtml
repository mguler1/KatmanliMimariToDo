@model PersonelGorevlendirListViewModel
@{
    ViewData["Title"] = "GorevlendirPersonel";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <form>
            <p class="lead text-center">
                Aşağıdaki göreve ilgili personel atanacaktır.Bu işlemi gerçekleştirmek istediğinizden emin misiniz?
            </p>
            <div class="form-group text-center">
                <a href="" class="btn btn-warning btn-sm">Hayır Vazgeç</a>
                <button class="btn btn-primary btn-sm">Evet Görevlendir</button>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="card border border-primary ">
            <div class="card-header">
                <h4 class="text-center lead">Görev Bilgileri</h4>
            </div>

            <div class="card-body">
                <h5 class="card-title">@Model.Gorev.Ad</h5>
                <p class="card-text">@Model.Gorev.Aciklama</p>
                <p class="card-text"><strong>Aciliyet Durumu: </strong><span class="badge badge-info"> @Model.Gorev.Aciliyet.Tanim </span></p>

            </div>
        </div>
    </div>

    <div class="col-md-8">
       
        <div class="card border border-primary mb-3">
            <h5 class="text-center">Personel Bilgileri</h5>
            <div class="row g-0">
                <div class="col-md-4">
                    <img src="/img/default.png" class="card-img " style="height:10rem!important">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">@Model.AppUser.Name @Model.AppUser.SurName</h5>
                        <p class="card-text"><getirGorevAppUserId app-user-id="@Model.AppUser.Id"></getirGorevAppUserId></p>
                        <p class="card-text">
                            <small class="text-muted">@Model.AppUser.Email</small>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>