@model GorevListAllViewModel
@{
    ViewData["Title"] = "Detaylandir";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Raporlar.Count > 0)
{
    <a asp-action="GetirExcel"asp-route-id="@Model.Id"target="_parent" class="btn btn-outline-success mt-2"><i class="fas fa-file-excel"></i></a>
    <a asp-action="GetirPdf"asp-route-id="@Model.Id"target="_blank" class="btn btn-outline-danger mt-2"><i class="fas fa-file-pdf"></i></a>
    <table class="table table-hover table-sm text-center mt-2">
        <tr>
            <th colspan="2">@Model.AppUser.Name @Model.AppUser.Surname Personelinizin @Model.Ad görevine yazmış olduğu raporlar</th>
        </tr>
        <tr>
            <th>Tanim</th>
            <th>Detay</th>
        </tr>
        @foreach (var rapor in Model.Raporlar)
        {
            <tr>
                <td>@rapor.Tanim</td>
                <td>@rapor.Detay</td>
            </tr>
        }
    </table>
}
else
{
    <div class="border border-dark mt-2 text-center">
        @Model.AppUser.Name @Model.AppUser.Surname Personeliniz şu anda  @Model.Ad görevi üzerinde çalışıyor.Henüz bir rapor yazmamıştır.
    </div>
}