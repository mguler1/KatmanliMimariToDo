
@model UrunAddDto
@{
    ViewData["Title"] = "EkleAciliyet";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


<form class="w-75 mx-auto p-3" method="post">
    <div class="form-group">
        <label asp-for="UrunAdi">Ürün Adı </label>
        <span asp-validation-for="UrunAdi" class="text-danger"></span>
        <input asp-for="UrunAdi" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="UrunAciklama">Ürün Açıklama </label>
        <span asp-validation-for="UrunAciklama" class="text-danger"></span>
        <input asp-for="UrunAciklama" type="text" class="form-control" />
    </div>

    <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-check"></i> Kaydet</button>
</form>
@section JavaScript{

    <script src="~/lib/jqueryValidate/jquery.validate.js"></script>
    <script src="~/lib/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}